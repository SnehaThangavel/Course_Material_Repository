{
    "version": 2,
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/auth/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/((?!api|auth|assets|favicon|vite).*)",
            "destination": "/index.html"
        }
    ]
}