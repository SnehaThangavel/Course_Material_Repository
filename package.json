        "cloudinary": "^2.9.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-async-handler": "^1.2.0",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "libphonenumber-js": "^1.12.37",
        "moment": "^2.30.1",
        "mongoose": "^7.6.3",
        "multer": "^2.0.2",
        "zod": "^3.25.76"
    }
}