{
    "name": "coursehub",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": ">=18.x"
    },
    "scripts": {
        "client-install": "npm install --prefix client",
        "server-install": "npm install --prefix server",
        "install-all": "npm run client-install && npm run server-install",
        "build": "cd client && npm install && npm run build && cd .. && rm -rf public && cp -r client/dist public"
