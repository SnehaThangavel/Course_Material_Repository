{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.cjs"
        },
        {
            "source": "/auth/(.*)",
            "destination": "/api/index.cjs"
        },
        {
            "source": "/((?!api|auth|git-root-marker|client-root-marker|favicon|vite|assets).*)",
            "destination": "/index.html"
        }
    ]
}